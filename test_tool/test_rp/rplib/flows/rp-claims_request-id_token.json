{
  "desc": "The Relying Party can ask for a specific claim using the 'claims' request parameter. The claim should be returned in an ID Token",
  "sequence": [
    {
      "Webfinger": {
        "set_webfinger_resource": null
      }
    },
    {
      "Discovery": {
        "set_discovery_issuer": null
      }
    },
    "Registration",
    {
      "SyncAuthn": {
        "set_request_args": {
          "claims": {
            "id_token": {
              "email": {
                "essential": true
              },
              "nickname": {
                "essential": true
              }
            }
          }
        }
      }
    },
    {
      "AccessToken": {
        "conditional_execution": {
          "profile": ["C,CT,CI,CIT"]
        }
      }
    }
  ],
  "usage": {
    "return_type": [
      "CI",
      "I",
      "C",
      "T",
      "CIT",
      "IT",
      "CT"
    ]
  },
  "assert": {
    "got_id_token_claims": {
      "claims": [
        "nickname",
        "email"
      ]
    }
  }
}
